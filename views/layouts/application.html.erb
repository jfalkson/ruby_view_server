  <!-- we create a function to make inputting links easier-->
  <%
    def link_to(name, url)
        return "<a href='#{url}'>#{name}</a>"
     end
    %>

<html>
  <body>
    <h1>You're using a layout
    
     <%= link_to('This is a link to google', 'http://google.com') %> </h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href="http://google.com">This is a link to google</a>
      <a href='me.html'>Me</a>
    <form method='post' action="<%= @request.path %>">
        First name: <input type="text" name="first_name" placeholder='first name'/><br />
        <input type="submit" value="Submit" />
        <%= @request.query.inspect %>
          <% if @request.query['first_name'] && !@request.query['first_name'].empty? %>
    Hello there <%= @request.query['first_name'] %>
  <% else %>
    Enter thy name
  <% end %>
    </form>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>